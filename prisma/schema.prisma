
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model User {
  id String @id @unique
  email String 
  firstName String
  lastName String 
  profileImage String
  customerId String? @unique

  content Content[]
}

model Content {
  id String @id @default(cuid())  
  userId String
  template String
  prompt String
  output String 
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
